<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/row_shop_taste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="@color/seaBlue"
        android:text="Eliquid Taste"
        android:textSize="28sp"/>

    <ImageView
        android:id="@+id/row_shop_image"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/row_shop_taste" />

    <View
        android:id="@+id/row_shop_devider"
        android:layout_width="0.5dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/seaBlue"
        android:layout_toRightOf="@id/row_shop_image"
        android:layout_below="@id/row_shop_taste"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/row_info_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/row_shop_devider"
        android:layout_below="@+id/row_shop_taste">
        <TextView
            android:id="@+id/row_shop_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row_shop_devider"
            android:layout_below="@id/row_shop_taste"
            android:layout_centerHorizontal="true"
            android:textColor="@color/seaBlue"
            android:text="@string/eliquids"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/row_shop_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/row_shop_devider"
                android:layout_below="@id/row_shop_taste"
                android:layout_centerHorizontal="true"
                android:textColor="@color/priceColor"
                android:text="Price: "
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/row_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/row_shop_devider"
                android:layout_below="@id/row_shop_taste"
                android:layout_centerHorizontal="true"
                android:textColor="@color/priceColor"
                android:text="10$"
                android:textSize="22sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_add_review"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/btn_add_review"/>

        <ImageView
            android:id="@+id/btn_add_to_cart"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_add_to_cart"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/row_info_block"
        android:background="@color/seaBlue"/>


</RelativeLayout>