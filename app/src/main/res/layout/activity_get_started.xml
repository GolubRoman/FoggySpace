<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_started"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_get_started"
    app:theme="@style/AppTheme.NoActionBar">

    <com.golubroman.golub.foggyspace.GetStartedPackage.MyVideoView
        android:id="@+id/video_get_started"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/welcome_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@color/seaBlue"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="48dp" />
    <ImageView
        android:id="@+id/btn_get_started"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:src="@drawable/btn_get_started"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="128dp" />

    <ImageView
        android:id="@+id/logo_get_started"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />
</FrameLayout>
