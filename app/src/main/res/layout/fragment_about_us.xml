<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_about_us">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_us_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About us"
                android:textColor="@color/seaBlue"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/foggy_space_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="The Foggy Space"
                    android:textStyle="bold"
                    android:textColor="@color/seaBlue"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/about_foggy_space_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/top_service_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Top Service"
                    android:textStyle="bold"
                    android:textColor="@color/seaBlue"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/about_top_service_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/goals_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Our Goals"
                    android:textStyle="bold"
                    android:textColor="@color/seaBlue"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/about_goals_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/delivery_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Quick Delivery"
                    android:textStyle="bold"
                    android:textColor="@color/seaBlue"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/about_delivery_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/eliquids_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="E-liquids"
                    android:textStyle="bold"
                    android:textColor="@color/seaBlue"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/about_eliquids_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="36dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>