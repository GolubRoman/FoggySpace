<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_calculator">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calculator_calculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coil Calculator"
                android:textColor="@color/seaBlue"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/wires_in_coil_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wires in coil:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/wires_in_coil_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>

                <TextView
                    android:id="@+id/number_of_coils_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of coils:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/number_of_coils_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>
                <TextView
                    android:id="@+id/coil_type_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coil type:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/coil_type_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>
                <TextView
                    android:id="@+id/wire_diameter_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wire diameter:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/wire_diameter_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>
                <TextView
                    android:id="@+id/turns_number_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turns number:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/turns_number_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>
                <TextView
                    android:id="@+id/legs_length_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legs length:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/legs_length_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>
                <TextView
                    android:id="@+id/wire_type_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wire Type:"
                    android:textColor="@color/seaBlue"
                    android:textSize="16sp" />
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/wire_type_spinner_calculator"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:ms_background_color="@color/headerBack"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/seaBlue"
                    android:elevation="16dp"/>
                <ImageView
                    android:id="@+id/btn_calculator"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginBottom="36dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/btn_calculator"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>